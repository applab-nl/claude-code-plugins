{
  "name": "hooks-notifier",
  "version": "2.0.0",
  "description": "Audio and visual notifications for Claude Code - alerts when input is required and when tasks complete",
  "author": {
    "name": "AppLab",
    "email": "plugins@applab.nl"
  },
  "homepage": "https://github.com/applab-nl/claude-code-plugins/tree/main/hooks-notifier",
  "repository": "https://github.com/applab-nl/claude-code-plugins",
  "license": "MIT",
  "keywords": ["notifications", "audio", "tts", "hooks", "macos", "statusline", "alerts"],
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/notification.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/stop.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/subagent_stop.py"
          }
        ]
      }
    ]
  }
}
